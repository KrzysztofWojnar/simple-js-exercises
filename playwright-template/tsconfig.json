{
    "compilerOptions": {
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": ["ES6", "DOM"],
        "noEmit": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "paths": {
            // update this section if you want to move the directories
            "@testing-framework": ["./testing-framework"],
            "@testing-framework/*": ["./testing-framework/*"],
            "@tests": ["./tests"],
            "@tests/*": ["./tests/*"]
        }
    }
}
